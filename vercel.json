{
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "cleanUrls": true,
    "trailingSlash": false,
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*).(jpg|jpeg|png|gif|svg|ico|webp)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}